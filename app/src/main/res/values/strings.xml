<resources>
    <string name="app_name">audioplayer</string>

    <style name="Text_Normal" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text_Title" parent="Text_Normal">
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_Body" parent="Text_Normal">
        <item name="android:textSize">36dp</item>
    </style>

    <style name="Text_media_category" parent="Text_Normal">
        <item name="android:textSize">150dp</item>
        <item name="android:textColor">#10E1E1E1</item>
    </style>

    <style name="Text_Time" parent="Text_Normal">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_second</item>
    </style>
</resources>

